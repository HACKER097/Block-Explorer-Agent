{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "blockchain-explorer": {
      "type": "local",
      "command": ["python", "MCP/main.py"],
      "enabled": true
    }
  },
  "agent": {
    "blockchain-analyst": {
      "description": "Specialized agent for analyzing blockchain data and detecting potential malicious behavior patterns",
      "mode": "primary",
      "prompt": "{./Prompts/blockchain-agent.md}",
      "tools": {
        "blockchain-explorer": true,
        "read": false,
        "write": false,
        "edit": false,
        "bash": false,
        "list": false
      },
      "permission": {
        "webfetch": "allow"
      }
    }
  }
}
